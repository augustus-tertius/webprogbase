<% include partials/header %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>See all users</title>
    <link rel="stylesheet" href="stylesheets/style.css">
</head>
<body>
<table class="page_table">
    <tr>
        <td id="info_col">
            <div class="menu">
                <a href="/events" class="link_button">Back to the main page</a>
                <div class="info">Here you can see all registered users</div>
            </div>
        </td>
        <td id="event_col">
            <ul>
                <%for(let i in user_list) { %>
                <li> <div class="user_block">
                            <div class = username>
                                <div class = "field_name"> Username: </div>
                                <div class = "field_value"> <%=user_list[i].username%></div>
                            </div>
                            <div class = role>
                                <div class = "field_name"> Role:</div>
                                <div class = "field_value"> <%=user_list[i].role%></div>
                            </div>
                        </div>
                    </div> </li>
                <%}%>
            </ul>
        </td>
    </tr>
</table>
</body>
</html>